@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section class="section-fixed">
            <div id="page-section-1" class="section-rel-fixed">
                <div class="login-card">
                    <form method="post">
                        <div class="form-box">
                            <h2>Enter your email.</h2>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="form-box">
                            <input asp-for="Input.Email" class="form-box-inner" autocomplete="username" placeholder="Email" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="form-box-btn">Reset Password</button>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
