@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="card-card">
    <form id="profile-form" method="post">
        <div class="form-box">
            <h2>Change Password</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="form-box">
            <label asp-for="Input.OldPassword" class="form-label"></label>
            <input asp-for="Input.OldPassword" class="form-box-inner" autocomplete="current-password" aria-required="true" />
        </div>
        <div>
            <div class="form-box-check">
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-box">
            <label asp-for="Input.NewPassword" class="form-label"></label>
            <input asp-for="Input.NewPassword" class="form-box-inner" autocomplete="new-password" aria-required="true" />
        </div>
        <div>
            <div class="form-box-check">
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-box">
            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            <input asp-for="Input.ConfirmPassword" class="form-box-inner" autocomplete="new-password" aria-required="true" />
        </div>
        <div>
            <div class="form-box-check">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-box">
            <button type="submit" class="form-box-btn">Update password</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
