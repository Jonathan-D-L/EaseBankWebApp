@page
@model BankWebApp.Pages.Customers.CustomersModel
@{
    ViewData["Title"] = "- Clients";
}

<section class="section-fixed">
    <div id="page-section-1" class="section-rel-fixed">
        <div class="center-content-row table-data-view">
            <table class="table-data-all">
                <thead>
                    <tr class="table-meta-tools">
                        <th class="table-meta-flex">
                            <a class="page-navigator-back-btn"
                               asp-page="/Index">
                                <i class="fa-solid fa-arrow-left"></i>
                            </a>
                            <div class="page-name font-weight-4">
                                CLIENTS
                            </div>
                        </th>
                        <th class="search-box">
                            <form method="get">
                                <input asp-for="@Model.Q" value="@Model.Q" placeholder="search" />
                                <input type="hidden" asp-for="@Model.Customer" />
                                <div class="clear-search">
                                    <a asp-page="/Customers/Customers"
                                       asp-route-customerId="@Model.Customer"
                                       asp-route-pageNum="@Model.CurrentPage">
                                        x
                                    </a>
                                </div>
                                <button class="button" type="submit"><i class="fa-solid fa-search"></i></button>
                            </form>
                        </th>
                        <th>
                            <a class="page-navigator-btn-3 font-weight-1"
                               asp-page="/Customers/CustomerCreate">
                                <div>
                                    SET UP A NEW CLIENT
                                </div>
                                <div>
                                    <i class="fa-solid fa-arrow-right"></i>
                                </div>
                            </a>
                        </th>
                    </tr>
                    <tr class="table-meta">
                        <th class="table-meta-record">
                            ID
                        </th>
                        <th class="table-meta-record">
                            Name
                            <a asp-page="/Customers/Customers"
                               asp-route-sortColumn="GivenName"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "GivenName" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Customers/Customers"
                               asp-route-sortColumn="GivenName"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "GivenName" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            National Id
                            <a asp-page="/Customers/Customers"
                               asp-route-sortColumn="NationalId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "NationalId" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Customers/Customers"
                               asp-route-sortColumn="NationalId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "NationalId" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            City
                            <a asp-page="/Customers/Customers"
                               asp-route-sortColumn="City"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "City" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Customers/Customers"
                               asp-route-sortColumn="City"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "City" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Street
                            <a asp-page="/Customers/Customers"
                               asp-route-sortColumn="StreetAddress"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "StreetAddress" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Customers/Customers"
                               asp-route-sortColumn="StreetAddress"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "StreetAddress" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Customer)
                    {
                        <tr class="table-data-shadow">
                        </tr>
                        <tr class="table-data" onclick="location.href='@Url.Page("/Customers/Customer", new { customerId = customer.CustomerId })'">
                            <td class="table-data-record">@customer.CustomerId</td>
                            <td class="table-data-record">@customer.GivenName @customer.SurName</td>
                            <td class="table-data-record">@(!string.IsNullOrEmpty(customer.NationalId) ? customer.NationalId : "~")</td>
                            <td class="table-data-record">@customer.City</td>
                            <td class="table-data-record">@customer.StreetAddress</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="page-navigator-rel">
                <div class="page-navigator">
                    <a class="page-navigator-btn"
                       asp-page="/Customers/Customers" asp-route-customerId="@Model.Customer"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@(Model.CurrentPage - Model.CurrentPage)">
                        <i class="fa-solid fa-angles-up"></i>
                    </a>
                    <a class="page-navigator-btn" id="sc-up"
                       asp-page="/Customers/Customers" asp-route-customerId="@Model.Customer"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@(Model.CurrentPage - 1)">
                        <i class="fa-solid fa-angle-up"></i>
                    </a>
                    <div class="cur-page">
                        <div class="">@(Model.CurrentPage)</div>
                        <div class="">of</div>
                        <div class="">@(Model.PageCount)</div>
                    </div>
                    <a class="page-navigator-btn" id="sc-down"
                       asp-page="/Customers/Customers" asp-route-customerId="@Model.Customer"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@if (Model.CurrentPage != Model.PageCount)
                                            {
                                            @(Model.CurrentPage + 1)
                                            }
                                            else{
                                            @(Model.CurrentPage)
                                            }">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                    <a class="page-navigator-btn"
                       asp-page="/Customers/Customers" asp-route-customerId="@Model.Customer"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@if (Model.CurrentPage != Model.PageCount){
                                            @(Model.CurrentPage = Model.PageCount)
                                            }
                                            else{
                                            @(Model.CurrentPage)
                                            }">
                        <i class="fa-solid fa-angles-down"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
