@page
@model BankWebApp.Pages.Accounts.LoansModel
@{
    ViewData["Title"] = "- Client Loans";
}

<section class="section-fixed">
    <div id="page-section-1" class="section-rel-fixed">
        <div class="center-content-row table-data-view">
            <table class="table-data-all">
                <thead>
                    <tr class="table-meta-tools">
                        <th class="table-meta-flex">
                            <a class="page-navigator-back-btn"
                               asp-page="/Customers/Customer"
                               asp-route-customerId="@Model.CustomerId">
                                <i class="fa-solid fa-arrow-left"></i>
                            </a>
                            <div class="page-name font-weight-4">
                                @Model.Customer.GivenName @Model.Customer.SurName
                            </div>
                        </th>
                        <th class="table-meta-flex">
                            <div class="page-name font-weight-4">
                                Loans
                            </div>
                        </th>
                        <th class="search-box">
                            <form method="get">
                                <input asp-for="@Model.Q" value="@Model.Q" placeholder="search" />
                                <input type="hidden" asp-for="@Model.CustomerId" value="@Model.CustomerId" />
                                <input type="hidden" asp-for="@Model.Loans" />
                                <div class="clear-search">
                                    <a asp-page="/Accounts/Loans"
                                       asp-route-customerId="@Model.CustomerId"
                                       asp-route-pageNum="@Model.CurrentPage">
                                        x
                                    </a>
                                </div>
                                <button class="button" type="submit" asp-route-customerId="@Model.CustomerId"><i class="fa-solid fa-search"></i></button>
                            </form>
                        </th>
                    </tr>
                    <tr class="table-meta">
                        <th class="table-meta-record">
                            Account
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="AccountId"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "AccountId" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="AccountId"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "AccountId" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Start Date
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Date"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Date" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Date"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Date" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Amount
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Amount"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Amount" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Amount"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Amount" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Duration
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Duration"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Duration" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Duration"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Duration" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Payments
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Payments"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Payments" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Payments"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Payments" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Status
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Status"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Status" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="Status"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Status" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Loan Id
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="LoanId"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "LoanId" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Loans"
                               asp-route-sortColumn="LoanId"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "LoanId" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loan in Model.Loans)
                    {
                        <tr class="table-data-shadow">
                        </tr>
                        <tr class="table-data">
                            <td class="table-data-record">@loan.AccountId</td>
                            <td class="table-data-record">@loan.Date.ToString("yy-MM-dd")</td>
                            <td class="table-data-record">@loan.Amount @Model.Currency</td>
                            <td class="table-data-record">@loan.Duration Months</td>
                            <td class="table-data-record">@loan.Payments @Model.Currency</td>
                            <td class="table-data-record">@loan.Status</td>
                            <td class="table-data-record">@loan.LoanId</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="page-navigator-rel">
                <div class="page-navigator">
                    <a class="page-navigator-btn"
                       asp-page="/Accounts/PermanentOrders" asp-route-customerId="@Model.CustomerId"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@(Model.CurrentPage - Model.CurrentPage)">
                        <i class="fa-solid fa-angles-up"></i>
                    </a>
                    <a class="page-navigator-btn" id="sc-up"
                       asp-page="/Accounts/PermanentOrders" asp-route-customerId="@Model.CustomerId"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@(Model.CurrentPage - 1)">
                        <i class="fa-solid fa-angle-up"></i>
                    </a>
                    <div class="cur-page">
                        <div class="">@(Model.CurrentPage)</div>
                        <div class="">of</div>
                        <div class="">@(Model.PageCount)</div>
                    </div>
                    <a class="page-navigator-btn" id="sc-down"
                       asp-page="/Accounts/PermanentOrders" asp-route-customerId="@Model.CustomerId"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@if (Model.CurrentPage != Model.PageCount)
                                            {
                                            @(Model.CurrentPage + 1)
                                            }
                                            else{
                                            @(Model.CurrentPage)
                                            }">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                    <a class="page-navigator-btn"
                       asp-page="/Accounts/PermanentOrders" asp-route-customerId="@Model.CustomerId"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@if (Model.CurrentPage != Model.PageCount){
                                            @(Model.CurrentPage = Model.PageCount)
                                            }
                                            else{
                                            @(Model.CurrentPage)
                                            }">
                        <i class="fa-solid fa-angles-down"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
    {
    <partial name="Shared/_ValidationScriptsPartial" />
}