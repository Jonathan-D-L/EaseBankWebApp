@page
@model BankWebApp.Pages.Accounts.CardsModel
@{
    ViewData["Title"] = "- Client Cards";
}

<section class="section-fixed">
    <div id="page-section-1" class="section-rel-fixed">
        <div class="center-content-row table-data-view">
            <table class="table-data-all">
                <thead>
                    <tr class="table-meta-tools">
                        <th class="table-meta-flex">
                            <a class="page-navigator-back-btn"
                               asp-page="/Customers/Customer"
                               asp-route-customerId="@Model.CustomerId">
                                <i class="fa-solid fa-arrow-left"></i>
                            </a>
                            <div class="page-name font-weight-4">
                                @Model.Customer.GivenName @Model.Customer.SurName
                            </div>
                        </th>
                        <th class="table-meta-flex">
                            <div class="page-name font-weight-4">
                                Cards
                            </div>
                        </th>
                        <th class="search-box">
                            <form method="get">
                                <input asp-for="@Model.Q" value="@Model.Q" placeholder="search" />
                                <input type="hidden" asp-for="@Model.CustomerId" value="@Model.CustomerId" />
                                <input type="hidden" asp-for="@Model.Cards" />
                                <div class="clear-search">
                                    <a asp-page="/Accounts/Cards"
                                       asp-route-customerId="@Model.CustomerId"
                                       asp-route-pageNum="@Model.CurrentPage">
                                        x
                                    </a>
                                </div>
                                <button class="button" type="submit" asp-route-customerId="@Model.CustomerId"><i class="fa-solid fa-search"></i></button>
                            </form>
                        </th>
                    </tr>
                    <tr class="table-meta">
                        <th class="table-meta-record">
                            Card
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="CardId"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "CardId" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="AccountId"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "CardId" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Type
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Type"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Type" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Type"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Type" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Cc-Type
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Cctype"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Cctype" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Cctype"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Cctype" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Cc-Number
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Ccnumber"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Ccnumber" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Ccnumber"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Ccnumber" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Cvv2
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Cvv2"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Cvv2" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Cvv2"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Cvv2" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Iss. Date
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Issued"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Issued" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="Issued"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "Issued" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                        <th class="table-meta-record">
                            Exp. Date
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="ExpY"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="asc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "ExpY" && Model.SortOrder == "asc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-up"></i>
                                </div>
                            </a>
                            <a asp-page="/Accounts/Cards"
                               asp-route-sortColumn="ExpY"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortOrder="desc"
                               asp-route-pageNum="@Model.CurrentPage"
                               asp-route-q="@Model.Q">
                                <div class="@(Model.SortColumn == "ExpY" && Model.SortOrder == "desc" ? "active-sort" : "")">
                                    <i class="fa-solid fa-angle-down"></i>
                                </div>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var card in Model.Cards)
                    {
                        <tr class="table-data-shadow">
                        </tr>
                        <tr class="table-data">
                            <td class="table-data-record">@card.CardId</td>
                            <td class="table-data-record">@card.Type</td>
                            <td class="table-data-record">@card.Cctype</td>
                            <td class="table-data-record">@card.Ccnumber</td>
                            <td class="table-data-record">@card.Cvv2</td>
                            <td class="table-data-record">@card.Issued.ToString("yy-MM-dd")</td>
                            <td class="table-data-record">@card.ExpY-@card.ExpM-01</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="page-navigator-rel">
                <div class="page-navigator">
                    <a class="page-navigator-btn"
                       asp-page="/Accounts/PermanentOrders" asp-route-customerId="@Model.CustomerId"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@(Model.CurrentPage - Model.CurrentPage)">
                        <i class="fa-solid fa-angles-up"></i>
                    </a>
                    <a class="page-navigator-btn" id="sc-up"
                       asp-page="/Accounts/PermanentOrders" asp-route-customerId="@Model.CustomerId"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@(Model.CurrentPage - 1)">
                        <i class="fa-solid fa-angle-up"></i>
                    </a>
                    <div class="cur-page">
                        <div class="">@(Model.CurrentPage)</div>
                        <div class="">of</div>
                        <div class="">@(Model.PageCount)</div>
                    </div>
                    <a class="page-navigator-btn" id="sc-down"
                       asp-page="/Accounts/PermanentOrders" asp-route-customerId="@Model.CustomerId"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@if (Model.CurrentPage != Model.PageCount)
                                            {
                                            @(Model.CurrentPage + 1)
                                            }
                                            else{
                                            @(Model.CurrentPage)
                                            }">
                        <i class="fa-solid fa-angle-down"></i>
                    </a>
                    <a class="page-navigator-btn"
                       asp-page="/Accounts/PermanentOrders" asp-route-customerId="@Model.CustomerId"
                       asp-route-sortColumn="@Model.SortColumn"
                       asp-route-sortOrder="@Model.SortOrder"
                       asp-route-q="@Model.Q"
                       asp-route-pageNum="@if (Model.CurrentPage != Model.PageCount){
                                            @(Model.CurrentPage = Model.PageCount)
                                            }
                                            else{
                                            @(Model.CurrentPage)
                                            }">
                        <i class="fa-solid fa-angles-down"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
    {
    <partial name="Shared/_ValidationScriptsPartial" />
}